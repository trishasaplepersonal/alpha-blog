<h1>Listing all articles</h1>

<div>
<p><%= link_to "Create new article", new_article_path() %></p>
<div>
<table>
<tr><th>Id</th><th>Title</th><th>Description</th><th colspan="3">Actions</th></tr>

<% @articles.each do |article| %>
    <tr>
    <td><%= article.id %></td>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to "Show", article_path(article) %></td>
    <td><%= link_to "Delete", article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
    <td><%= link_to "Edit", edit_article_path(article) %></td>
    </tr>
<% end %>
</table>
</div>
