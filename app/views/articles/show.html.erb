
<div class="container">
<h2 class="text-center mt-4"><%= @article.title %></h2>
<div class="card  shadow mb-5 bg-white rounded mt-5">
  <div class="card-header font-italic text-center">
    by <%= @article.user.username %>
  </div>
  <div class="card-body">    
    <p class="card-text text-left"><%= @article.description %></p>   
    <% if current_user === @article.user || current_user.admin? %>
    <div class="text-center">
    <%= link_to "Edit", edit_article_path(@article),class:"btn btn-outline-info" %>
    <%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'},class:"btn btn-outline-danger" %>
    </div>
    <% end %>
  </div>
  <div class="card-footer text-center">
  Created at <%= time_ago_in_words(@article.created_at)%> ago, Edited at <%= time_ago_in_words(@article.updated_at)%> ago
  </div>
</div>

<p><%= link_to "Create new article", new_article_path(), class:"text-success" %></p>
</div>


