<%= render 'shared/errors' %>
<div class="form-group">
<%= form_with(model: @article, local: true, data: { turbo: false })  do |f| %>

<%= f.label :title, class:"col-sm-2 col-form-label" %>
<%= f.text_field :title, class:"col-sm-10  form-control",placeholder: "Title of article" %>
<%= f.label :description,class:"col-sm-2 col-form-label" %>
<%= f.text_area :description, class:"col-sm-10 form-control", rows: 10, placeholder: "Description of article" %>
<%= f.submit class:"btn btn-primary mt-3"%>
<% end %>
</div>

