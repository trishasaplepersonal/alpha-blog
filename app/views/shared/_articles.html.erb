<div class="container">
<% @articles.each do |article| %>
<div class="card text-center shadow mb-5 bg-white rounded mt-5">
  <div class="card-header font-italic">
    by <%= link_to article.user.username, user_path(article.user) %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
    <p class="card-text"><%= article.description.truncate(100) %></p>    
    <%= link_to "View", article_path(article),class:"btn btn-outline-success"  %>
    <% if current_user === article.user || (current_user != nil && current_user.admin?) %>
    <%= link_to "Edit", edit_article_path(article),class:"btn btn-outline-info" %>
    <%= link_to "Delete", article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'},class:"btn btn-outline-danger" %>
    <% end %>
  </div>
  <div class="card-footer">
  Created at <%= time_ago_in_words(article.created_at)%> ago, Edited at <%= time_ago_in_words(article.updated_at)%> ago
  </div>
</div>

<% end %>

<p><%= link_to "Create new article", new_article_path(), class:"text-success" %></p>
</div>