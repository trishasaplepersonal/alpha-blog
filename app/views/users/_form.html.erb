<%= render 'shared/errors', obj: @user %>
<div class="form-group">
<%= form_with(model: @user, local: true, data: { turbo: false })  do |f| %>

<%= f.label :username, class:"col-sm-2 col-form-label" %>
<%= f.text_field :username, class:"col-sm-10  form-control",placeholder: "username" %>
<%= f.label :email,class:"col-sm-2 col-form-label" %>
<%= f.email_field :email, class:"col-sm-10 form-control", placeholder: "email" %>
<%= f.label :password,class:"col-sm-2 col-form-label" %>
<%= f.password_field :password, class:"col-sm-10 form-control", placeholder: "enter password here" %>
<%= f.submit(@user.new_record? ? "Sign up": "Update user" ,class:"btn btn-primary mt-3") %>
<% end %>
</div>

