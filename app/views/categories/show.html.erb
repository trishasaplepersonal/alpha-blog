
<div class="container">
<h2 class="text-center mt-4"><%= @category.name %></h2>
<div class="card  shadow mb-5 bg-white rounded mt-5">  
  <div class="card-body">    
    <p class="card-text text-left"><%= @category.description %></p>   
    <% if current_user != nil && current_user.admin? %>
    <div class="text-center">
    <%= link_to "Edit", edit_category_path(@category),class:"btn btn-outline-info" %>
    <%= link_to "Delete", category_path(@category), data: { turbo_method: :destroy, turbo_confirm: 'Are you sure?'},class:"btn btn-outline-danger" %>
    </div>
    <% end %>
  </div>
  <div class="card-footer text-center">
  Created at <%= time_ago_in_words(@category.created_at)%> ago, Edited at <%= time_ago_in_words(@category.updated_at)%> ago
  </div>
</div>

<p><%= link_to "Create new category", new_category_path(), class:"text-success" %></p>
</div>


